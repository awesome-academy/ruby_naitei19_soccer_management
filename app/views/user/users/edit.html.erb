<div>
  <section class="bg-white dark:bg-gray-900">
    <div class="px-5 pt-20 pb-8 mx-auto lg:py-16 lg:pt-28">
      <div class="mx-auto my-auto flex justify-center items-center">
        <h1><%= t "users.update.users.title" %></h1>
      </div>
    </div>
  </section>
  
  <!-- Main content -->
  <section class="content">
    <div class="container mx-auto">
      <div class="flex justify-center mt-8">
        <div class="w-2/3 pb-2">
          
          <div class="mb-4 border-b border-gray-200 dark:border-gray-700">
            <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" id="myTab" data-tabs-toggle="#myTabContent" role="tablist">
              <li class="mr-2" role="presentation">
                <button class="inline-block p-4 border-b-2 rounded-t-lg" id="profile-tab" data-tabs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false" onclick="openElement('edit-information')"><%= t "users.update.users.basic_information" %>
                </button>
              </li>
              <li class="mr-2" role="presentation">
                <button class="inline-block p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300" id="dashboard-tab" data-tabs-target="#dashboard" type="button" role="tab" aria-controls="dashboard" aria-selected="false" onclick="openElement('change-password')"><%= t "users.update.users.change_password" %>
                </button>
              </li>
            </ul>
          </div>
          <div id="myTabContent">
            <div class="form p-4 rounded-lg bg-gray-50 dark:bg-gray-800" id="edit-information" role="tabpanel" aria-labelledby="profile-tab">
              <p class="text-sm text-gray-500 dark:text-gray-400"><%= t "users.update.users.basic_information" %></p>
              <%= render "user_form", item: @user, url: user_path(@user) %>
            </div>
            <div class="hidden form p-4 rounded-lg bg-gray-50 dark:bg-gray-800" id="change-password" role="tabpanel" aria-labelledby="dashboard-tab">
              <p class="text-sm text-gray-500 dark:text-gray-400"><%= t "users.update.users.change_password" %></p>
              <%= render "change_password", item: @user, url: update_password_user_path(@user) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
