<%= form_tag(admin_users_path, method: :get, class: "my-3 p-3 border rounded-md") do %>
  <div class="flex gap-4">
    <div class="flex flex-col flex-1">
      <%= label_tag :name, t("search_form_user.name") %>
      <%= text_field_tag :name, params[:name], placeholder: t("search_form_user.placeholder_name") %>
    </div>
    <div class="flex flex-col flex-1">
      <%= label_tag :email, t("search_form_user.email") %>
      <%= text_field_tag :email, params[:email], placeholder: t("search_form_user.placeholder_email") %>
    </div>
    <div class="flex flex-col flex-1">
      <%= label_tag :phone, t("search_form_user.phone") %>
      <%= text_field_tag :phone, params[:phone], placeholder: t("search_form_user.placeholder_phone") %>
    </div>
    <%= submit_tag t("search_form_user.submit"), class: "mt-4 px-4 py-2 ml-2 font-semibold text-white !bg-blue-500 rounded hover:bg-blue-600" %>
  </div>
<% end %>
