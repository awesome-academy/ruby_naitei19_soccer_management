<div class="w-full max-w-xs m-auto bg-indigo-100 rounded p-5">
  <header>
    <img class="w-20 mx-auto mb-5" src="https://img.icons8.com/fluent/344/year-of-tiger.png" />
  </header>

  <%= form_with(url: login_path, scope: :session) do |f| %>
    <div>
      <%= f.label :email, t("login.form.email"), class: "block mb-2 text-indigo-500" %>
      <%= f.email_field :email, class: "w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300" %>
    </div>

    <div>
      <%= f.label :password, t("login.form.password"), class: "block mb-2 text-indigo-500" %>
      <%= f.password_field :password, class: "w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300" %>
    </div>

    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span><%= t("login.remember_me") %></span>
    <% end %>

    <%= f.submit "Login", class: "mt-2 w-full !bg-indigo-700 !hover:bg-pink-700 text-white font-bold py-2 px-4 mb-6 rounded" %>
  <% end %>
  <footer>
    <%= link_to t("login.form.forget_pass"), root_path, class: "text-indigo-700  hover:text-pink-700 text-sm float-left" %>
    <%= link_to t("sign_up.title"), signup_path, class: "text-indigo-700 hover:text-pink-700 text-sm float-right" %>
  </footer> 
</div>
