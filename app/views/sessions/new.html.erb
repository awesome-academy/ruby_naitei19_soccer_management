<div class="mt-5 w-full max-w-[500px] m-auto bg-blue-100 rounded p-5 text-blue-500">
  <header class="text-center">
    <p class="mb-0 text-2xl font-bold"><%= t "login.title"%></p>
    <img class="w-20 mx-auto" src="https://img.icons8.com/fluent/344/year-of-tiger.png" />
  </header>
  <%= form_with(url: login_path, scope: :session) do |f| %>
    <div>
      <%= f.label :email, t("login.form.email"), class: "block mb-2 text-blue-500" %>
      <%= f.email_field :email, class: "w-full p-2 mb-6 border-b-2 border-blue-500 outline-none focus:bg-gray-300" %>
    </div>
    <div>
      <%= f.label :password, t("login.form.password"), class: "block mb-2 text-blue-500" %>
      <%= f.password_field :password, class: "w-full p-2 mb-6 border-b-2 border-blue-500 outline-none focus:bg-gray-300" %>
    </div>
    <%= f.label :remember_me, class: "checkbox inline" do %>
      <div class="flex items-center gap-2">
        <%= f.check_box :remember_me %>
        <span class="text-blue"><%= t("login.remember_me") %></span>
      </div>
    <% end %>
    <%= f.submit "Login", class: "mt-2 w-full !bg-blue-700 !hover:bg-pink-700 text-white font-bold py-2 px-4 mb-6 rounded" %>
  <% end %>
  <footer>
    <%= link_to t("login.form.forget_pass"), new_password_reset_path, class: "hover:text-pink-700 text-sm float-left" %>
    <%= link_to t("sign_up.title"), signup_path, class: "hover:text-pink-700 text-sm float-right" %>
  </footer>
</div>
