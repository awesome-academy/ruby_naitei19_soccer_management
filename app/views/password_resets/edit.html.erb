<% provide(:title, t("password_reset.title")) %>
<h1 class="text-center text-2xl font-bold mt-4"><%= t("password_reset.title") %></h1>
<div class="flex justify-center">
  <div class="">
    <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
      <%= render "shared/error_messages", object: @user %>

      <%= hidden_field_tag :email, @user.email %>

      <div class="mb-4">
        <%= f.label :password, t("password_reset.form.password"), class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, class: "form-input" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, t("password_reset.form.confirm"), class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
      </div>

      <div class="flex justify-center">
        <%= f.submit t("password_reset.form.submit"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
